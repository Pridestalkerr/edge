{
  "name": "@edge-placeholder/prettier-config",
  "files": [
    "./base.json",
    "./tailwind.json"
  ],
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check '**/*.{json}' --ignore-unknown --no-error-on-unmatched-pattern",
    "format:fix": "prettier --write '**/*.{json}' --ignore-unknown --no-error-on-unmatched-pattern"
  },
  "prettier": "./base",
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "prettier-plugin-tailwindcss": "^0.6.9"
  }
}
